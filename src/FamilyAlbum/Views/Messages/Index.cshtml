@model IEnumerable<FamilyAlbum.Models.Message>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div id="messages">

    @foreach (var item in Model)
    {
        <div class="message">
            @if (item.Read == false)
            {
                <img src="~/images/newsm.png" class="message-new" />
            }
        <p class="message-sender">@item?.Sender?.FirstName</p>
        <a asp-action="Details" asp-route-id="@item.MessageId" class="message-link"><h5 class="message-subject">@item?.Title</h5></a>
        <a asp-action="Delete" asp-route-id="@item.MessageId"><h6 class="message-delete-link">Delete</h6></a>
        </div>
    }
    @if(Model.Count() == 0)
    {
        <h2 class="centered">You have no messages</h2>

    }
</div>
