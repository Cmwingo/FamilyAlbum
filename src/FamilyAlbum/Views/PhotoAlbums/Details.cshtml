@model FamilyAlbum.Models.PhotoAlbum

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="fancy-handwriting">@Html.DisplayFor(model => model.Name) Album</h2>
<h4 class="fancy-handwriting">@Html.DisplayFor(model => model.DateStart) - @Html.DisplayFor(model => model.DateEnd)</h4>
<a asp-action="Add" asp-route-id="@Model.PhotoAlbumId">Add a photo</a>

@if (Model.Images.Count != 0)
{
    <div id="photoalbum-images">
        @foreach (var image in Model.Images)
        {
            <div class="photoalbum-image-wrapper flex-item">
                <p>@Html.DisplayFor(modelImage => image.Name)</p>
                <img class="photoalbum-image" src="@image.FilePath" />
            </div>
        }
     </div>
}
else
{
    <h3>There are no images in this album yet. <a asp-action="Add" asp-route-id="@Model.PhotoAlbumId">Add a photo to get started.</a>
</h3>
}




<h2>Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DateEnd)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateEnd)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DateStart)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateStart)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PhotoAlbumId">Edit</a> |
    <a asp-action="UserAlbums">Back to List</a> |
    <a asp-action="Add" asp-route-id="@Model.PhotoAlbumId">Add a photo</a>
</div>
