@{ 
    Layout = null;
}
<h4>Upload an image using this form</h4>
<form method="post" enctype="multipart/form-data" class="new-file" asp-action="Upload">
    <div class="form-group">
        <div class="col-md-10">
            <label>Image Name</label>
            <input type="text" name="name" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="file" name="file" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>