@model FamilyAlbum.Models.PhotoAlbum

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            type: 'GET',
            dataType: 'html',
            url: '@Url.Action("Upload")',
            success: function (result) {
                $('#upload-view').html(result);
                $('form').append("<input type='hidden' id='albumId' name='albumId' value='" + @Model.PhotoAlbumId + "' >");
            }
        });
    });
</script>


<h2>Add to @Html.DisplayFor(model => model.Name) album</h2>

    <br /><br /><br />
    <div id="upload-view" style="display:block">
        <h5>@ViewBag.Result</h5>
    </div>



