@model FamilyAlbum.Models.Family

@{
    ViewData["Title"] = "Join";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Join</h2>

<form asp-action="Join">
    <div class="form-horizontal">
        <h4>Family</h4>
        <hr />
        <h3>Would you like to join the @Model.Name family?</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="FamilyId" />
        <div class="form-group">
            <div class="col-md-10">
                <input type="hidden" asp-for="Motto" class="form-control" />
                <span asp-validation-for="Motto" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="hidden" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="hidden" asp-for="PhotoURL" class="form-control" />
                <span asp-validation-for="PhotoURL" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="hidden" asp-for="Members" class="form-control" />
                <span asp-validation-for="Members" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
