@model IEnumerable<FamilyAlbum.Models.Post>

@{
    ViewData["Title"] = "Family Posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Family Posts</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if (Model.Count() == 0)
{
    <h2>Be the first in the family to <a asp-action="Create">create</a> a post</h2>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Body)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TStamp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    Posted By
                </th>
                <th>
                    Replies
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model)
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Body)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TStamp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FirstName)
                </td>
                <td>
                    @item?.Replies?.Count
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PostId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PostId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PostId">Delete</a> |
                    <a asp-controller="Replies" asp-action="Create" asp-route-postId="@item.PostId">Reply</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
    @foreach (var item in Model)
    {
        <div class="post">
            <div class="list-group">
                <a asp-action="Details" asp-route-id="@item.PostId" class="list-group-item">
                    <h4 class="list-group-item-heading">@Html.DisplayFor(modelItem => item.Title)<p class="reply-badge-text">Replies <span class="badge">@item?.Replies?.Count</span></p></h4>
                    <p class="list-group-item-text">-- Posted by @Html.DisplayFor(modelItem => item.User.FirstName) on @Html.DisplayFor(modelItem => item.PostTime)</p>                    
                </a>
                @if (User.Identity.Name == item.User.Email)
                {
                    <a asp-action="Edit" asp-route-id="@item.PostId">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.PostId"> Delete </a>
                }
            </div>
        </div>
    }
}
